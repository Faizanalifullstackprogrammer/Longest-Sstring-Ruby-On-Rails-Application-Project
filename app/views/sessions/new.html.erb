<div class="login-main row justify-content-center">
    <div class="col-12 col-md-10 col-lg-auto">
        <div class="box main align-items-center d-flex flex-column border p-5 container">
            <h1 class=" font-weight-bold">Log In</h1>
            <div class="login-field">
                <%= form_with url: login_path, local: true do |f| %>
                    <div class="form-group">
                        <%= f.label :uname, class: "form_label" %>
                        <%= f.text_field :uname, class: "form-control", placeholder: 'User Name'   %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password, class: "form_label" %>
                        <%= f.password_field :password, class: "form-control"   %>
                    </div>
                    <div class="form-group mt-3 justify-content-center">
                        <%= f.submit 'Log In', class: 'btn btn-primary' %>
                    </div>
                    <div>
                        <%= link_to 'Sign Up', sign_up_path, class: '' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>